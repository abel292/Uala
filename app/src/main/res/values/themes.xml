<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.UalaAbel" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="android:textViewStyle">@style/styleTextView</item>
        <item name="android:editTextStyle">@style/styleEditText</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="styleEditText" parent="Widget.AppCompat.EditText">
        <item name="android:fontFamily">@font/champagne_limousines_bold</item>
    </style>

    <style name="styleEditTextForm" parent="Widget.AppCompat.EditText">
        <item name="android:fontFamily">@font/champagne_limousines_bold</item>
    </style>

    <style name="styleTextView" parent="android:Widget.TextView">
        <item name="android:fontFamily">@font/champagne_limousines</item>
    </style>

    <style name="styleTextViewTitle" parent="android:Widget.TextView">
        <item name="android:fontFamily">@font/champagne_limousines_bold</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="styleTextViewFondoOscuroTitle" parent="android:Widget.TextView">
        <item name="android:fontFamily">@font/champagne_limousines_bold</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">#fff</item>
        <item name="android:textColorHint">#fff</item>

    </style>
    <style name="styleTextViewNormalFondoOscuro" parent="android:Widget.TextView">
        <item name="android:fontFamily">@font/champagne_limousines</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">#fff</item>
        <item name="android:textColorHint">#fff</item>

    </style>

</resources>